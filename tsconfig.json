{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "lib": ["esnext"],
        "sourceMap": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "declaration": true,
        "skipLibCheck": false,
        "skipDefaultLibCheck": true,
        "declarationMap": true,
        "outDir": "./lib",
        "rootDir": "./src"
    },
    "include": ["./src"],
    "exclude": ["**/node_modules", "lib", "__tests__", "**/.*/", "node_modules"]
}
